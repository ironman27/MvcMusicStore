<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")"
          rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"
            type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div id="header">
        <h1>
            <a href="/">
                ASP.NET MVC MUSIC
                STORE
            </a>
        </h1>
        <ul id="navlist">
            <li class="first">
                <a href="@Url.Content("~")" id="current">
                    Home
                </a>
            </li>
            <li><a href="@Url.Content("~/Store/")">Store</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>


            @if (Request.IsAuthenticated)
            {
                <li>
                    <a href="@Url.Content("~/StoreManager/")">
                        @this.User.Identity.Name
                    </a>
                </li>
                <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("LogOn", "LogOn", "Account")</li>
            }

        </ul>
        </div>
        @{Html.RenderAction("GenreMenu", "Store");}
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            All rights reserved. @*<a href="http://asp.net/mvc">ASP.NET MVC 3</a>*@
        </div>
</body>
</html>